<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net461</TargetFramework>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <DefineConstants>$(DefineConstants);JET_MODE_ASSERT;RIDER</DefineConstants>
    <OutputPath>..\output\ForTea.RiderPlugin\$(Configuration)</OutputPath>
    <LangVersion>7.3</LangVersion>
    <RootNamespace>JetBrains.ForTea.RiderPlugin</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2019.1.1"/>
    <PackageReference Include="JetBrains.Rider.SDK" Version="2019.1.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="JetBrains.Roslyn.References.Repack" Version="42.42.20190303.172953"/>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ForTea.Core\ForTea.Core.csproj"/>
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="TemplateProcessing\CodeGeneration\TemplateBaseFull.cs"/>
    <Compile Remove="TemplateProcessing\CodeGeneration\TemplateBaseFullExecutableSuffix.cs"/>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="TemplateProcessing\CodeGeneration\TemplateBaseFull.cs"/>
    <EmbeddedResource Include="TemplateProcessing\CodeGeneration\TemplateBaseFullExecutableSuffix.cs"/>
  </ItemGroup>

</Project>
