<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net461</TargetFramework>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <DefineConstants>$(DefineConstants);JET_MODE_ASSERT</DefineConstants>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <OutputPath>..\output\ForTea.Core\$(Configuration)</OutputPath>
        <LangVersion>7.3</LangVersion>
        <RootNamespace>GammaJul.ForTea.Core</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="JetBrains.Annotations" Version="2019.1.1" />
        <PackageReference Include="JetBrains.Rider.SDK" Version="2019.1.2">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <Compile Remove="TemplateProcessing\CodeGeneration\TemplateBaseFull.cs" />
        <Compile Remove="TemplateProcessing\CodeGeneration\TemplateBaseStub.cs" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="TemplateProcessing\CodeGeneration\TemplateBaseFull.cs" />
        <EmbeddedResource Include="TemplateProcessing\CodeGeneration\TemplateBaseStub.cs" />
    </ItemGroup>
</Project>
